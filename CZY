#include<stdio.h>
int isLeap(int year) {
	return year % 4 == 0 && year % 100 != 0 || year % 400 == 0;
}
int daysInMonth(int year, int month) {
	if (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12)
		return 31;
	if (month == 2 || month == 4 || month == 6 || month == 10 || month == 12)
		return 30;
	if (month == 2) {
		if (isLeap(year))
			return 29;
		else
			return 28;
	}
}
void dateInput(int date[]) {
	while (1) {
		printf("enter a date:\n");
		scanf_s("%d%d%d", &date[0], &date[1], &date[2]);
		if (isLegal(date)) {
			printf("legal");
			break;
		}
		else {
			printf("illegal,enter again:\n");
		}
	}
}
int main() {
	int date[2] = 0;
	dateInput(date);
	return 0;
}
